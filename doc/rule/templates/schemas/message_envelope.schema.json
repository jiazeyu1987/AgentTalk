{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://agenttalk.local/schemas/message_envelope.schema.json",
  "title": "MessageEnvelope",
  "type": "object",
  "additionalProperties": true,
  "required": ["schema_version", "message_id", "plan_id", "producer_agent_id", "type", "created_at", "payload"],
  "properties": {
    "schema_version": { "type": "string", "pattern": "^[0-9]+\\.[0-9]+$" },
    "message_id": { "type": "string", "minLength": 1 },
    "plan_id": { "type": "string", "minLength": 1 },
    "task_id": { "type": ["string", "null"] },
    "output_name": { "type": ["string", "null"], "minLength": 1 },
    "command_id": { "type": ["string", "null"] },
    "producer_agent_id": { "type": "string", "minLength": 1 },
    "type": { "type": "string", "minLength": 1 },
    "subtype": { "type": ["string", "null"] },
    "created_at": { "type": "string", "format": "date-time" },
    "idempotency_key": { "type": ["string", "null"] },
    "payload": {
      "type": "object",
      "properties": {
        "command": {
          "anyOf": [
            { "$ref": "https://agenttalk.local/schemas/command.schema.json" },
            { "type": "null" }
          ]
        },
        "files": {
          "type": ["array", "null"],
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["path", "sha256"],
            "properties": {
              "path": { "type": "string", "minLength": 1 },
              "sha256": { "type": "string", "minLength": 1 },
              "content_type": { "type": ["string", "null"] },
              "size_bytes": { "type": ["integer", "null"], "minimum": 0 }
            },
            "additionalProperties": true
          }
        }
      },
      "additionalProperties": true
    },
    "routing": {
      "type": ["object", "null"],
      "properties": {
        "intended_recipients": {
          "type": ["array", "null"],
          "items": { "type": "string", "minLength": 1 }
        },
        "notes": { "type": ["string", "null"] }
      },
      "additionalProperties": true
    },
    "correlation": { "type": ["object", "null"], "additionalProperties": true }
  },
  "allOf": [
    {
      "if": {
        "properties": {
          "type": { "const": "artifact" }
        }
      },
      "then": {
        "required": ["task_id", "output_name"],
        "properties": {
          "task_id": { "type": "string", "minLength": 1 },
          "output_name": { "type": "string", "minLength": 1 },
          "payload": { "type": "object", "required": ["files"] }
        }
      }
    },
    {
      "if": {
        "properties": {
          "type": { "const": "command" }
        }
      },
      "then": {
        "required": ["task_id", "command_id"],
        "properties": {
          "task_id": { "type": "string", "minLength": 1 },
          "command_id": { "type": "string", "minLength": 1 },
          "payload": { "type": "object", "required": ["command"] }
        }
      }
    }
  ]
}

