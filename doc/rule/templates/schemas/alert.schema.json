{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://agenttalk.local/schemas/alert.schema.json",
  "title": "Alert",
  "type": "object",
  "additionalProperties": true,
  "required": ["schema_version", "alert_id", "plan_id", "severity", "type", "created_at", "message"],
  "properties": {
    "schema_version": { "type": "string", "pattern": "^[0-9]+\\.[0-9]+$" },
    "alert_id": { "type": "string", "minLength": 1 },
    "plan_id": { "type": "string", "minLength": 1 },
    "severity": { "type": "string", "enum": ["LOW", "MEDIUM", "HIGH", "CRITICAL"] },
    "type": { "type": "string", "minLength": 1 },
    "created_at": { "type": "string", "format": "date-time" },
    "source": { "type": ["object", "null"], "additionalProperties": true },
    "message": { "type": "string", "minLength": 1 },
    "details": { "type": ["object", "null"], "additionalProperties": true }
  }
}

