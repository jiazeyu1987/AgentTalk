{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://agenttalk.local/schemas/task_state.schema.json",
  "title": "TaskState",
  "type": "object",
  "additionalProperties": true,
  "required": ["schema_version", "plan_id", "task_id", "agent_id", "state", "updated_at"],
  "properties": {
    "schema_version": { "type": "string", "pattern": "^[0-9]+\\.[0-9]+$" },
    "plan_id": { "type": "string", "minLength": 1 },
    "task_id": { "type": "string", "minLength": 1 },
    "agent_id": { "type": "string", "minLength": 1 },
    "state": {
      "type": "string",
      "enum": [
        "PENDING",
        "READY",
        "RUNNING",
        "BLOCKED_WAITING_INPUT",
        "BLOCKED_WAITING_REVIEW",
        "BLOCKED_WAITING_HUMAN",
        "FAILED",
        "SKIPPED",
        "COMPLETED"
      ]
    },
    "updated_at": { "type": "string", "format": "date-time" },
    "message_id": { "type": ["string", "null"] },
    "command_id": { "type": ["string", "null"] },
    "command_seq": { "type": ["integer", "null"], "minimum": 0 },
    "blocking": { "type": ["object", "null"], "additionalProperties": true },
    "progress": { "type": ["object", "null"], "additionalProperties": true },
    "result": { "type": ["object", "null"], "additionalProperties": true }
  }
}
