{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://agenttalk.local/schemas/ack.schema.json",
  "title": "Ack",
  "type": "object",
  "additionalProperties": true,
  "required": ["schema_version", "plan_id", "message_id", "consumer_agent_id", "status", "consumed_at"],
  "properties": {
    "schema_version": { "type": "string", "pattern": "^[0-9]+\\.[0-9]+$" },
    "plan_id": { "type": "string", "minLength": 1 },
    "message_id": { "type": "string", "minLength": 1 },
    "consumer_agent_id": { "type": "string", "minLength": 1 },
    "status": { "type": "string", "enum": ["CONSUMED", "SUCCEEDED", "FAILED"] },
    "consumed_at": { "type": "string", "format": "date-time" },
    "finished_at": { "type": ["string", "null"], "format": "date-time" },
    "result": { "type": ["object", "null"], "additionalProperties": true }
  }
}

